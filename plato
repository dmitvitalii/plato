import sys
import os
from subprocess import call

VERSION = '0.1.0'
APK_EXT = '.apk'


def get_device_path(out_dir_path):
    return out_dir_path.split(os.environ('ANDROID_PRODUCT_OUT'))[1]


def push_apk(apk):
    name, ext = os.path.splitext(apk)
    if len(name) == 0:
        print("error: no filename provided")
    if len(ext) == 0:
        apk = '{}.{}'.format(apk, APK_EXT)
    call(['adb', 'push', apk, get_device_path(apk)])


def main():
    if sys.argv[1] == 'push':
        push_apk(sys.argv[2])


if __name__ == "__main__":
    sys.exit(main())
